{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "paths": {
      "@config": ["./config"],
      "@filter": ["./filter"],
    },
    "allowJs": true,
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
}
